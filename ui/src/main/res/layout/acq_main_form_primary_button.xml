<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/acq_tinkoff_pay_button_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/acq_button_tinkoff_pay"
    android:minHeight="56dp"
    android:layout_marginHorizontal="16dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/acq_primary_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Оплатить с тинькофф"
        android:textColor="@color/acq_colorTinkoffPayText"
        android:textSize="18sp" />

    <ImageView
        android:layout_marginStart="16dp"
        android:id="@+id/acq_primary_button_image"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/acq_icon_tinkoff_pay" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
